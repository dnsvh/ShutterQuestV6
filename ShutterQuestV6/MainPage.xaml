<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:ShutterQuest.Views"
            x:Class="ShutterQuest.Views.MainPage">


    <TabbedPage.ToolbarItems>

        <ToolbarItem IconImageSource="shutterquest_logo.png"
                     Order="Primary"
                     Priority="0"
                     IsEnabled="False" />


        <ToolbarItem Text="{Binding PointsDisplay}"
                     Order="Primary"
                     Priority="1" />
    </TabbedPage.ToolbarItems>


    <TabbedPage.Children>
        <local:HomePage Title="Home" IconImageSource="home_icon.png" />
        <local:ProfilePage Title="Profiel" IconImageSource="profile_icon.png" />
        <local:ChallengePage Title="Quests" IconImageSource="challenge_icon.png" />
        <local:ShopPage Title="Shop" IconImageSource="shop_icon.png" />
        <local:SettingsPage Title="Instellingen" IconImageSource="settings_icon.png" />
    </TabbedPage.Children>
</TabbedPage>
