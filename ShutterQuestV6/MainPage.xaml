<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:ShutterQuest.Views"
            x:Class="ShutterQuest.Views.MainPage"
            Title="ShutterQuest">

    <!-- Toolbar Items -->
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="{Binding PointsDisplay}" />
    </TabbedPage.ToolbarItems>

    <!-- Pages -->
    <TabbedPage.Children>
        <local:HomePage Title="Home" IconImageSource="home_icon.png" />
        <local:ProfilePage Title="Profile" IconImageSource="profile_icon.png" />
        <local:ChallengePage Title="Challenges" IconImageSource="challenge_icon.png" />
        <local:ShopPage Title="Shop" IconImageSource="shop_icon.png" />
        <local:SettingsPage Title="Settings" IconImageSource="settings_icon.png" />
    </TabbedPage.Children>
</TabbedPage>
