<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShutterQuest.Views.SettingsPage"
             Title="Settings">

    <StackLayout Padding="20" VerticalOptions="Start">
        <Label Text="Instellingen" FontSize="24" HorizontalOptions="Start" />
        <Label Text="Moet nog worden uitgebreid" HorizontalOptions="Start" />

        <!-- Log Out Button -->
        <Button Text="Log uit"
                Command="{Binding LogOutCommand}"
                BackgroundColor="#e67a7a"
                TextColor="White"
                Margin="10,600,20,0"
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>

