<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShutterQuest.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="Black">

    <Grid RowDefinitions="*, *">
        <Grid>
            <!-- Profile Picture, needs to be dynamic asp -->
            <Image Source="default_profile_picture.png"
                   Aspect="AspectFill"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand" />

            <BoxView VerticalOptions="End"
                     HeightRequest="100">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                        <GradientStop Color="Black" Offset="0.0" />
                        <GradientStop Color="Transparent" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <Label Text="{Binding DisplayNameOrUsername}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="End"
                   HorizontalOptions="Start"
                   Margin="20,0,0,20" />
        </Grid>

        <StackLayout Grid.Row="1" Padding="20" Spacing="10">
            <Label Text="Username:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Gray" />
            <Label Text="{Binding Username}"
                   FontSize="16"
                   TextColor="White" />

            <Label Text="Email:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Gray" />
            <Label Text="{Binding Email}"
                   FontSize="16"
                   TextColor="White" />
        </StackLayout>
    </Grid>
</ContentPage>

